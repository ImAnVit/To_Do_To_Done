/* Fix the 'ImAnVit' element at the bottom of the page */
.container {
  position: relative;
  height: 100%;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  background-color: #fff; /* Adjust background color as needed */
  padding: 10px;
  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
  z-index: 1000; /* Ensure it stays on top */
}

.tasks-overview {
  text-align: center;
  margin: 0 auto;
  width: 100%;
}
