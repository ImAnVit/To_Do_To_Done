.container {
  padding: 24rpx;
  min-height: auto;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
  padding-bottom: 24rpx;
  box-sizing: border-box;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 24rpx 24rpx;
  background: #f8f8f8;
  z-index: 100;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 24rpx;
}

.content {
  margin-top: 240rpx;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.settings-group {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding: 10rpx 0;
  width: 90%;
  max-width: 650rpx;
  margin-left: auto;
  margin-right: auto;
}

.task-stats {
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.center-label {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  border-bottom: none !important;
  text-align: center;
  width: 100%;
  padding: 0;
  position: relative;
}

.center-label .item-label {
  width: auto;
  text-align: center;
  font-weight: bold;
  display: inline-block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.stats-container {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0;
  width: 100%;
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #eee;
}

.stat-item:last-child {
  border-right: none;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1296db;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item .setting-label {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 36rpx;
  color: #333;
}

.item-value {
  font-size: 32rpx;
  color: #666;
}

.small-reset-button {
  margin: 12rpx auto;
  padding: 16rpx;
  background: #ff4d4f;
  border-radius: 8rpx;
  text-align: center;
  width: 60%;
}

.small-reset-button text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.share-icon {
  font-size: 40rpx;
}

.language-options {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 20rpx;
}

.language-button, .share-action-button {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  width: 240rpx !important;
  height: 90rpx !important;
  font-size: 36rpx !important;
  padding: 0 !important;
  margin: 0 auto 24rpx auto;
  box-sizing: border-box;
  border-radius: 40rpx;
  font-weight: 500;
  background-color: #1296db;
  color: white !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  white-space: nowrap;
  line-height: 90rpx !important;
  border: none;
  vertical-align: middle;
}

.edit-menu {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85vw;
  max-width: 650rpx;
  min-width: 320rpx;
  max-height: 85vh;
  overflow: auto;
  z-index: 10000;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  box-sizing: border-box;
}

.edit-menu-content {
  width: 100%;
  padding: 0 16rpx;
}

.edit-menu-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.edit-menu button, .settings-button, button {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.edit-menu button {
  flex: 1;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-width: 140rpx;
  white-space: nowrap;
}

.edit-menu button:first-child {
  background: #f0f0f0;
  color: #666;
}

.edit-menu button:last-child {
  background: #1296db;
  color: white;
}

.settings-group:last-child {
  padding-top: 40rpx;
}

.credits {
  position: relative;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  padding: 20rpx;
  background: #f8f8f8;
  z-index: 10000;
  margin-top: 20rpx;
  margin-bottom: 0;
}

.language-item, .share-item {
  flex-direction: column;
  align-items: flex-start;
  padding: 20rpx 30rpx;
}

.share-item {
  border-bottom: none !important;
}

.share-button {
  margin: 20rpx auto 30rpx;
  width: 240rpx;
  background-color: #1296db;
  color: white;
  border-radius: 40rpx;
  font-size: 36rpx;
  padding: 0;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}

.avatar-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  margin: 0 auto;
  cursor: pointer;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  aspect-ratio: 1/1;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.default-avatar {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1296db;
  position: relative;
  overflow: hidden;
  border-radius: 50%;
}

.man-icon {
  width: 40%;
  height: 40%;
  border-radius: 50%;
  background-color: #e0e0e0;
  position: absolute;
  top: 12%;
}

.man-icon:after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  width: 120%;
  height: 70%;
  background-color: #e0e0e0;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.name-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  width: 100%;
}

.user-name {
  font-size: 42rpx;
  font-weight: 500;
  color: #333;
  padding: 10rpx 20rpx;
  text-align: center;
}

.name-input {
  width: 80%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin: 10rpx 0;
  font-size: 32rpx;
  text-align: center;
}

.edit-buttons {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
}

.save-btn, .cancel-btn {
  font-size: 40rpx;
  margin: 0 20rpx;
  padding: 10rpx;
}

.save-btn {
  color: #1296db;
}

.cancel-btn {
  color: #ff6b6b;
}

.profile-group {
  padding: 40rpx 0;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.profile-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.language-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.share-item.no-border {
  border-bottom: none !important;
}

.share-action-button {
  margin: 20rpx auto 30rpx;
  width: 240rpx;
  background-color: #1296db;
  color: white;
  border-radius: 40rpx;
  font-size: 36rpx;
  padding: 0;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  font-weight: 500;
}

page {
  background: #f8f8f8;
  padding-bottom: 0;
}
