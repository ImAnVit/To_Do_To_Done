.container {
  padding: 24rpx;
  min-height: 100vh;
  background: #f8f8f8;
  background-image: 
    linear-gradient(rgba(255, 255, 255, 0.85), rgba(255, 255, 255, 0.85)),
    repeating-linear-gradient(45deg, #e6f7ff, #e6f7ff 10px, #f0f9ff 10px, #f0f9ff 20px);
  box-sizing: border-box;
  width: 100%;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 120rpx 24rpx 24rpx;
  background: #f8f8f8;
  z-index: 100;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-right: 24rpx;
}

.back-symbol {
  font-size: 44rpx;
  color: #333;
  font-weight: 300;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 80rpx;
}

.form {
  margin-top: 200rpx;
  background: #fff;
  background-image: 
    linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)),
    url("https://mmbiz.qpic.cn/mmbiz_jpg/UicQ7HgWiaUb3VX3yBVhgXFibOrhXvG2Lqm9Oia9rJTdvqHdic7JNNcAb7Zb4xoMHdnIj5ibLWgbCVQPJicmvMJKTbew/0");
  background-size: cover;
  background-position: center;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 96rpx);
  margin-left: auto;
  margin-right: auto;
}

.form-item {
  margin-bottom: 32rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  text-align: left;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 160rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  text-align: left;
  box-sizing: border-box;
  overflow: auto;
  resize: none;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 8rpx;
}

.priority-options {
  display: flex;
  gap: 16rpx;
}

.priority-option {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 0 16rpx;
}

.priority-option.selected {
  border: 2rpx solid #333;
}

.priority-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.picker {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  text-align: left;
  box-sizing: border-box;
}

.footer {
  margin-top: -40rpx;
  padding: 0 24rpx;
  width: calc(100% - 48rpx);
  margin-left: auto;
  margin-right: auto;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #1296db;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  padding: 20rpx 0;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #fff;
}