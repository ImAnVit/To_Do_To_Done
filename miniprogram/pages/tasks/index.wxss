/* Task list styles */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  margin: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.add-task {
  display: flex;
  margin-bottom: 30rpx;
}

.task-input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fff;
  margin-right: 20rpx;
}

.add-btn {
  width: 150rpx;
  height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
}

.task-list {
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.task-text {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.completed .task-text {
  color: #999;
  text-decoration: line-through;
}

.delete-btn {
  padding: 10rpx;
}

.empty-state {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
